@page
@using EMigrantHack38.App.Dominio;
@model EMigrantHack38.App.Pages.ListModel
@{
}
<div class="container">
  <main class="bd-main">
    <span>
      <h1 class="bd-title">
          <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-pencil-fill" viewBox="0 0 16 16">
          <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z"/>
          </svg>
        <i class="fas fa-search"></i> Insertar Migrante
      </h1>
      <hr id="separador">
    </span>
<form method="post" class="row g-3">
  <div class="col-6">
    <label for="inputAddress" class="form-label">Nombres</label>
    <input asp-for="migrante.Nombre" class="form-control" placeholder="Nombre" required>
    <span asp-validation-for="migrante.Nombre" class="text-danger"></span>
  </div>

  <div class="col-6">
    <label for="inputAddress2" class="form-label">Apellidos</label>
    <input asp-for="migrante.Apellido" class="form-control" placeholder="Apellidos" required>
  </div>


  <div class="col-md-6">
    <label for="inputPassword4" class="form-label">Email</label>
    <input asp-for="migrante.Email" class="form-control" placeholder="user@dominio..." required>
  </div>

  <div class="col-md-6">
    <label for="inputCity" class="form-label">Dirección</label>
    <input asp-for="migrante.DireccionActual" class="form-control" placeholder="Direccion Actual" >
  </div>

  <div class="col-sm-6">
    <label for="inputCity" class="form-label">Celular</label>
    <div class="input-group mb-3">
      <select class="form-control" id="Celular">
        <option>(+57)</option>
        <option>(+56)</option>
        <option>(+54)</option>
      </select>
        
      <input asp-for="migrante.Telefono" class="form-control" placeholder="Telefono / Celular" required>   
    </div>
  </div>

  <div class="col-sm-6">
    <label asp-for="migrante.TipoDocumento"></label>
    <div class="input-group mb-3">
      <select asp-for="migrante.TipoDocumento" class="form-control" id="TipoDocumento" required>
        
        <option id="0">Cedula</option>
        <option id="1">Tarjeta de identidad</option>
        <option id="2">Pasaporte</option>
        <option id="3">Cedula extrangería</option>
       
       <input asp-for="migrante.NumeroDocumento" class="form-control" placeholder="Numero Documento" required> 
      </select>
    </div>
  </div>


  <div class="col-sm-6">
    <label asp-for="migrante.SituacionLaboral"></label>
    <div class="input-group mb-3">
      <select asp-for="migrante.SituacionLaboral" class="form-control" id="SituacionLaboral" required>
        
        <option id="0">Empleado</option>
        <option id="1">Desempleado</option>
        <option id="2">Independiente</option>
        
      </select>
    </div>
  </div>

  <div class="col-12">
    <button type="submit" class="btn btn-primary">Guardar</button>
  </div>
</form>